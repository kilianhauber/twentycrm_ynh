[Unit]
Description=TwentyCRM (Docker Compose)
After=network.target docker.service
Requires=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=__INSTALL_DIR__
ExecStart=/usr/bin/docker compose -f __INSTALL_DIR__/docker-compose.yml --env-file __INSTALL_DIR__/.env up -d
ExecStop=/usr/bin/docker compose -f __INSTALL_DIR__/docker-compose.yml --env-file __INSTALL_DIR__/.env down
TimeoutStartSec=0

[Install]
WantedBy=multi-user.target
